{
  "name": "@monorepo/root",
  "private": true,
  "scripts": {
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "release:patch": "lerna version patch --conventional-commits --no-push",
    "release:minor": "lerna version minor --conventional-commits --no-push",
    "release:major": "lerna version major --conventional-commits --no-push",
    "release:version": "lerna version --conventional-commits --no-push",
    "dependencies:link": "lerna link",
    "dependencies:clean": "lerna clean --yes",
    "dependencies:install": "lerna exec --stream npm install",
    "dependencies:bootstrap": "lerna bootstrap",
    "dependencies:bootstrap-dev": "npm run dependencies:bootstrap && npm run dependencies:link"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "tslint": "^5.20.1",
    "tslint-clean-code": "^0.2.10",
    "tslint-immutable": "^6.0.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^3.7.5"
  }
}
