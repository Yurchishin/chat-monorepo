{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@client/constants": ["constants"],
      "@client/dictionary": ["dictionary"],
      "@client/models": ["models"],
      "@client/services": ["services"],
      "@client/stores": ["stores"],
      "@client/styles": ["styles"],
      "mst-types": ["types/mst"],
      "@client/tcomb": ["types/tcomb-types"],
      "@client/types": ["types/typescript"],
      "@client/theme": ["theme"],
      "@client/utils": ["utils"],
      "mst-react": ["tools/mst-react"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
