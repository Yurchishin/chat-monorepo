{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@client/constants": ["constants"],
      "@client/dictionary": ["dictionary"],
      "@client/services": ["services"],
      "@client/tcomb-types": ["tcomb-types"],
      "@client/theme": ["theme"],
      "@client/types": ["types"],
      "@client/utils": ["utils"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
