{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "paths": {
    "@dictionary": ["dictionary"],
    "@io-types": ["io-types"],
    "@types": ["types"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
