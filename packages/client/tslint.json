{
  "extends": [
    "../../tslint.common.json"
  ],
  "linterOptions": {
    "exclude": [
      "src/*.spec.ts",
      "src/*.spec.tsx"
    ]
  },
  "rules": {
    "no-import-side-effect": false,
    "no-submodule-imports": [
      true,
      "fp-ts",
      "io-ts",
      "io-ts-types",
      "@testing-library"
    ],
    "no-trailing-spaces": false,
    "typedef": [
      true,
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration",
      "variable-declaration-ignore-function"
    ],
    "match-default-export-name": false
  }
}
