{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "paths": {
      "@config": ["config"],
      "@connection": ["connection"],
      "@dictionary": ["dictionary"],
      "@effects": ["effects"],
      "@entity": ["entity"],
      "@migration": ["migration"],
      "@io-types": ["io-types"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
